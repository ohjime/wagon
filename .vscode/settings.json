{
    "python.defaultInterpreterPath": "src/server/.venv/bin/python3",
    "python.terminal.activateEnvironment": false,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[django-html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "monosans.djlint"
    },
    "auto-close-tag.activationOnLanguage": [
        "markdown",
        "django-html"
    ],
    "auto-rename-tag.activationOnLanguage": [
        "markdown",
        "django-html",
    ],
    "emmet.includeLanguages": {
        "django-html": "html",
    },
    "tailwind-fold.supportedLanguages": [
        "html",
        "django-html"
    ],
    "tailwind-fold.unfoldedTextOpacity": 1,
    "tailwind-fold.foldedText": " class = ...",
    "tailwind-fold.foldedTextColor": "#6699cc",
    "tailwind-fold.unfoldIfLineSelected": true,
    "tailwind-fold.showTailwindImage": true,
    "djlint.formatJs": true,
    "djlint.formatCss": true,
    "djlint.maxAttributeLength": 10,
    "djlint.maxLineLength": 20,
    "editor.suggest.showWords": false,
    "editor.occurrencesHighlight": "off",
    "editor.hover.enabled": false,
    "files.exclude": {
        "**/.vscode-remote-containers": true,
        "**/.vscode-server/bin": true,
        "**/.vscode-server/data/CachedProfilesData": true,
        "**/.vscode-server/data/CachedExtensionVSIXs": true,
        "**/.vscode-server/data/logs": true,
        "**/.vscode-server/data/machineid": true,
        "**/.vscode-server/data/User": true,
        "**/miniforge3*": true,
        "**/Miniforge3*": true,
        "**/*.aux": true,
        "**/*.log": true,
        "**/*.out": true,
        "**/*.gz": true,
        "**/*.toc": true,
        "**/document.bbl": true,
        "**/document.synctex(busy)": true,
        "**/texmf": true,
        "**/build": true,
        "**/linux": true,
        "**/macos": true,
        "**/windows": true,
        "**/web": true,
        "**/.idea": true,
        "**/pubspec.lock": true,
        "**/firepit-log.txt": true,
        "**/devtools_options.yaml": true,
        "**/analysis_options.yaml": true,
        "**/app.iml": true,
        "**/.flutter-plugins": true,
        "**/.flutter-plugins-dependencies": true,
        "**/.firebaserc": true,
        "**/.hintrc": true,
        "**/.metadata": true,
        "**/firebase.json": true,
        "**/.docusaurus": true,
        "**/venv": true,
        "**/.gitignore": true,
        "**/eslint.config.js": true,
        "**/.prettierrc": true,
        "**/.prettierignore": true,
        "**/babel.config.js": true,
        "**/.nojekyll": true,
        "**/.obsidian": true,
        "**/tsconfig.json": true,
        "**/package.json": true,
        "**/README.md": true,
        "**/.vscode/ltex.dictionary.en-US.txt": true,
        "**/.vscode/ltex.disabledRules.en-US.txt": true,
        "**/.vscode/ltex.hiddenFalsePositives.en-US.txt": true,
        "**/firebase_options.dart": true,
        "**/node_modules": true,
        "**/.venv": true,
        "**/uv.lock": true,
        "**/package-lock.json": true,
        "**/.dart_tool": true,
        "**/db.sqlite3": true,
        "**/__pycache__": true,
        "**/__init__.py": true,
    },
    "explorer.sortOrder": "type",
}